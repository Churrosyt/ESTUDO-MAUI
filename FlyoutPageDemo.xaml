<?xml version="1.0" encoding="utf-8" ?>
<FlyoutPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiDemo.FlyoutPageDemo"
            FlyoutLayoutBehavior="Popover"
             Title="FlyoutPageDemo">


    <FlyoutPage.Flyout>
        <ContentPage Title="Flyout submenu" Background="AliceBlue" >
            <Label Text="Submenu"
                   FontSize="Large"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"
                   />
        </ContentPage>
    </FlyoutPage.Flyout>
    
    <FlyoutPage.Detail>
        <ContentPage Title="Flyout submenu" Background="Tomato" >
            <Label Text="Detalhes"
            FontSize="Large"
            HorizontalOptions="Center"
            VerticalOptions="Center"
            />
        </ContentPage>

    </FlyoutPage.Detail>
</FlyoutPage>